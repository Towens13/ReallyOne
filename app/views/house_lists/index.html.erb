<div class = "page-header">
  <h1>House List</h1> 
</div>

  <%= link_to "Post a New House" , new_house_list_path , class: "btn btn-success" %>

  <% @house_lists.each do |house_list| %>
    <div class = "house_list">

      <sp><%= house_list.address %></sp>
      <sp><%= house_list.city %></sp>
      <sp><%= house_list.state %></sp>
      <sp><%= house_list.zipCode %></sp>
     
    <div class = "meta">
        <%= link_to time_ago_in_words(house_list.created_at) + " ago", house_list %>
        | <%= link_to "Show", house_list %> |
    </div> 
    <span class = "admin">
      <%= link_to "Edit" , edit_house_list_path(house_list) %> |
      <%= link_to 'Delete', house_list, method: :delete, data: { confirm: 'Are you sure you want to delete this house?' } %> |
    </span>

</div>
</div>
<% end %>
